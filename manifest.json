{
  "name": "Octopus AI Experiment",
  "description": "Experimental Octopus AI Query Tool",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_icon": "octopusai.png",
    "default_title": "Open the Octopus AI overlay"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "host_permissions": [
    "https://octopuscopilotproduction.azurewebsites.net/*"
  ],
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "octoterra.js"
  },
  "web_accessible_resources": [{
    "matches": ["https://*.octopus.app/*"],
    "resources": ["logo.png", "cross.png"]
  }]
}